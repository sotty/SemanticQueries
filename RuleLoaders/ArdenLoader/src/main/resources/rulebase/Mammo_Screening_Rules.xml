							</GE>
							<LT>
								<Identifier var="Age" otype="number"/>
								<Value otype="number">75</Value>
							</LT>
							<Or>
								<IsNull type="is">
									<Identifier var="Last_Mammogram_Report" otype="string"/>
								</IsNull>
								<Not>
									<OccurWithinPast type="occurred">
